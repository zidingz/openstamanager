        js: '{{ paths['js'] }}',
        css: '{{ paths['css'] }}',
        img: '{{ paths['img'] }}',

        id_module: '{{ id_module }}',
        id_record: '{{ id_record }}',

        order_manager_id: '{{ order_manager_id }}',

        cifre_decimali: {{ setting('Cifre decimali per importi') }},

        decimals: "{{ formatter.decimals }}",
        thousands: "{{ formatter.thousands }}",

        search: search,
